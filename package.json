{
    "name": "react-mentoring",
    "version": "1.0.0",
    "description": "Netflixroulette. React mentoring application.",
    "scripts": {
        "api": "node src/api.js",
        "start": "webpack-dev-server --config config/webpack.dev.js --open",
        "build": "npm run clean:dist && webpack --config config/webpack.prod.js",
        "test": "jest",
        "clean": "npm cache clean --force && rimraf -- dist node_modules",
        "clean:dist": "rimraf -- dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Lighttree/react-mentoring.git"
    },
    "keywords": [
        "mentoring",
        "netflix",
        "react",
        "express"
    ],
    "author": "Viktor Busko <viktor_busko@epam.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Lighttree/react-mentoring/issues"
    },
    "homepage": "https://github.com/Lighttree/react-mentoring#readme",
    "eslintConfig": {
        "extends": "airbnb",
        "env": {
            "browser": true,
            "jest": true,
            "node": true
        },
        "rules": {
            "comma-dangle": [
                "error",
                "never"
            ],
            "indent": [
                "error",
                4
            ],
            "linebreak-style": 0,
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "devDependencies": true
                }
            ],
            "react/jsx-indent": [
                "error",
                4
            ],
            "react/jsx-no-undef": [
                true,
                {
                    "allowGlobals": true
                }
            ],
            "react/jsx-filename-extension": [
                1, 
                {
                    "extensions": [
                        ".js",
                        ".jsx"
                    ]
                }
            ]
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}"
        ],
        "testEnvironment": "jsdom",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
          },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$",
            "^.+\\.module\\.(css|sass|scss)$"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    },
    "dependencies": {
        "express": "^4.16.4",
        "react": "^16.8.5",
        "react-dom": "^16.8.5",
        "react-redux": "^6.0.1",
        "react-router": "^5.0.0",
        "redux": "^4.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "@babel/preset-react": "^7.0.0",
        "babel-jest": "^24.5.0",
        "babel-loader": "^8.0.5",
        "css-loader": "^2.1.1",
        "eslint": "^5.3.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-react": "^7.11.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^24.5.0",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.11.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "rimraf": "^2.6.3",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "terser-webpack-plugin": "^1.2.3",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0",
        "webpack-dev-server": "^3.2.1",
        "webpack-merge": "^4.2.1"
    }
}